{
	"inputs": 
	{
		"reference": 
		{
			"class": "File",
			"path": "rabix/tests/test-files/chr20.fa",
			"size": 123,
			"checksum": "sha1$hash"
		},

		"reads": 
		[
			{
				"class": "File",
				"path": "rabix/tests/test-files/example_human_Illumina.pe_1.fastq"
			},

			{
				"class": "File",
				"path": "rabix/tests/test-files/example_human_Illumina.pe_2.fastq"
			}
		],

		"min_std_max_min": 
		[
			1,
			2,
			3,
			4
		],

		"minimum_seed_length": 3
	},

	"app": 
	{
		"id": "some_id",
		"class": "CommandLineTool",
		"cwlVersion" : "cwl:draft-4",
		"hints": 
		[
			{
				"class": "sbg:MemRequirement",
				"value": 5000
			}
		],

		"requirements": 
		[
			{
				"class": "DockerRequirement",
				"dockerPull": "images.sbgenomics.com/rabix/bwa",
				"dockerImageId": "9d3b9b0359cf"
			}
		],

		"inputs": 
		[
			{
				"id": "#reference",
				"sbg:stageInput": "copy",
				"type": 
				{
					"type": "File",
					"adapter": 
					{
						"position": 2,
						"metadata": 
						{
							"file_type": "reference",
							"sample": "SAMPLE1"
						}
					}
				}
			},

			{
				"id": "#reads",
				"type": 
				{
					"type": "array",
					"items": "File",
					"adapter": 
					{
						"position": 3
					}
				}
			},

			{
				"id": "#minimum_seed_length",
				"type": 
				{
					"type": "int",
					"adapter": 
					{
						"position": 1,
						"prefix": "-m"
					}
				}
			},

			{
				"id": "#min_std_max_min",
				"type": 
				{
					"items": "int",
					"type": "array",
					"adapter": 
					{
						"itemSeparator": ",",
						"position": 1,
						"prefix": "-I"
					}
				}
			}
		],

		"outputs": 
		[
			{
				"id": "#directory",
				"type": 
				{
					"type": "Directory"
				},

				"outputBinding": 
				{
					"glob": "directory5"
				}
			},
			{
				"id": "#single",
				"type": 
				{
					"type": "File"
				},

				"outputBinding": 
				{
					"glob": "file1.txt",
					"sbg:metadata": 
					{
						"file_type": 
						{
							"class": "Expression",
							"script": "{ var path = $self.path; var chunks = path.split('/'); return chunks.slice(-1)[0].split('.').slice(-1)[0]; }"
						},

						"sample": "SAMPLE1"
					},

					"secondaryFiles": 
					[
						"^^sec",
						".aq",
						"aw",
						"^.dict"
					]
				}
			},

			{
				"id": "#array",
				"type": 
				{
					"type": "array",
					"items": 
					{
						"type": "File"
					}
				},

				"outputBinding": 
				{
					"glob": "file2.txt",
					"sbg:metadata": 
					{
						"file_type": "array",
						"sample": "SAMPLE1"
					}
				}
			},

			{
				"id": "#record",
				"type": 
				{
					"name": "MyRecord",
					"type": "record",
					"fields": 
					[
						{
							"name": "file_1",
							"type": 
							[
								"null",
								{
									"type": "array",
									"items": 
									{
										"type": "File"
									}
								}
							],

							"outputBinding": 
							{
								"glob": "*.dat",
								"sbg:metadata": 
								{
									"file_type": "record",
									"sample": "SAMPLE1"
								}
							}
						}
					]
				}
			}
		],

		"arguments": 
		[
			{
				"valueFrom": 
				{
					"class": "Expression",
					"engine": "cwl-js-engine",
					"script": "{return 1 + 2}"
				},

				"position": 1,
				"prefix": "-t"
			}
		],

		"baseCommand": 
		[
			"bwa",
			"mem"
		],

		"stdout": "output.sam"
	}
}